                    <i class='bx bxl-twitter bx-md' style="color: rgb(0, 161, 224);"></i>
                </a>
            </div>
            <div class="" style="text-align: center;">
                <% if(global.user==="Guests" ) {%>
                    <button class="button" id="btnlogin">
                        <a href="/login" style="color: white;">Sign in</a>
                    </button>
                    <% }else{%>
                        <br>
                        <button class="button" id="btnlogin" style="background-color: blue;">
                            <a href="/login" style="color: white;">Sign out</a>
                        </button>
                        <% }%>
            </div>
